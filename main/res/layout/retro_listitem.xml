<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/githubtv"
        android:text="Github ID: "
        android:textColor="#000000"
        android:layout_toEndOf="@+id/retroImage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/retroImage"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contributions: "
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/retroImage"
        android:layout_below="@+id/githubtv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name?"
        android:textColor="#E04836"
        android:id="@+id/nametv"
        android:layout_alignTop="@+id/githubtv"
        android:layout_toEndOf="@+id/githubtv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Value?"
        android:textColor="#E04836"
        android:id="@+id/contributionstv"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>